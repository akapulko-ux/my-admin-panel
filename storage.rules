rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }
    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'admin';
    }
    function isAgent() {
      return isSignedIn() && request.auth.token.role == 'agent';
    }

    // Все изображения хранятся в папке images/
    match /images/{imagePath=**} {
      // Просмотр — публичный (если нужно)
      allow read: if true;
      // Загрузка и удаление — только агент/админ
      allow write, delete: if isAdmin() || isAgent();
    }
  }
}
