rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // === Утилиты ===
    function isSignedIn() {
      return request.auth != null;
    }

    // Проверка роли через custom claims
    function hasRoleInToken(role) {
      return isSignedIn() && request.auth.token.role == role;
    }

    // Проверка роли через Firestore
    function hasRoleInFirestore(role) {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Комбинированная проверка роли (либо через token, либо через Firestore)
    function isAdmin() {
      return hasRoleInToken('admin') || hasRoleInFirestore('admin');
    }

    function isAgent() {
      return hasRoleInToken('agent') || hasRoleInFirestore('agent');
    }

    function isDeveloper() {
      return hasRoleInFirestore('застройщик');
    }

    // Проверка, является ли пользователь владельцем шахматки
    function isChessboardOwner(chessboardId) {
      let chessboard = get(/databases/$(database)/documents/chessboards/$(chessboardId)).data;
      let user = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return isDeveloper() && chessboard.developerId == user.developerId;
    }

    // === Шахматки ===
    match /chessboards/{chessboardId} {
      // Чтение разрешено всем (для публичных ссылок)
      allow read: if true;
      
      // Создание и обновление разрешено админам, модераторам и застройщикам
      allow create, update: if 
        isAdmin() || 
        hasRoleInFirestore('модератор') || 
        (
          hasRoleInFirestore('застройщик') && 
          (
            // Для создания проверяем developerId в новых данных
            (request.resource.data.developerId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.developerId) ||
            // Для обновления проверяем developerId в существующей шахматке
            (resource != null && resource.data.developerId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.developerId)
          )
        );
      
      // Удаление разрешено админам, модераторам и застройщикам (только свои шахматки)
      allow delete: if 
        isAdmin() || 
        hasRoleInFirestore('модератор') ||
        (
          hasRoleInFirestore('застройщик') && 
          resource != null && 
          resource.data.developerId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.developerId
        );
    }

    // === Коллекция агентов и всё внутри неё ===
    match /agents/{agentId} {
      // админ может всё, агент — только свои данные  
      allow read, write: if isAdmin() || (isAgent() && request.auth.uid == agentId);

      // чаты
      match /chats/{chatId} {
        allow read, write: if isAdmin() || (isAgent() && request.auth.uid == agentId);

        // support внутри чатов
        match /support/{supportId} {
          allow read, write: if isAdmin() || (isAgent() && request.auth.uid == agentId);
        }
      }

      // избранное агента
      match /favorites/{favoriteId} {
        allow read, write: if isAdmin() || (isAgent() && request.auth.uid == agentId);
      }

      // подборки агента
      match /selections/{selectionId} {
        allow read, write: if isAdmin() || (isAgent() && request.auth.uid == agentId);
      }
    }

    // === Недвижимость ===
    match /properties/{propertyId} {
      // публичное чтение
      allow read: if true;
      // добавление/изменение/удаление — только admin или agent
      allow create, update, delete: if isAdmin() || isAgent();

      match /documents/{docId} {
        allow read: if true;
        allow create, update, delete: if isAdmin() || isAgent();
      }
    }

    // === Комплексы ===
    match /complexes/{complexId} {
      allow read: if true;
      // Разрешаем обновление админам, агентам и застройщикам (только для удаления ссылки на шахматку)
      allow update: if 
        isAdmin() || 
        isAgent() ||
        (
          hasRoleInFirestore('застройщик') && 
          // Проверяем, что обновляются только разрешенные поля
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['chessboardPublicUrl']) &&
          // Проверяем, что новое значение null
          request.resource.data.chessboardPublicUrl == null
        );
      allow create, delete: if isAdmin() || isAgent();
    }

    // === Профили пользователей ===
    match /users/{userId} {
      // админ видит/меняет любые, агент — только свой
      allow read, update: if isAdmin() || (isAgent() && request.auth.uid == userId);
      // разрешаем создание документа пользователя самому пользователю при регистрации
      allow create: if isSignedIn() && request.auth.uid == userId;
    }

    // === PDF-файлы (если хранятся в Firestore) ===
    match /pdfs/{pdfId} {
      allow read, create, update, delete: if isAdmin() || isAgent();
    }

    // === Фоллбэк для любых новых коллекций ===
    match /{path=**} {
      // чтение всем залогиненным
      allow read:    if isSignedIn();
      // запись — только admin и agent
      allow create, update, delete: if isAdmin() || isAgent();
    }
  }
}
