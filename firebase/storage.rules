rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Функция для проверки роли пользователя
    function hasRole(role) {
      return request.auth != null && request.auth.token.role == role;
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    function isModerator() {
      return hasRole('moderator');
    }
    
    function isDeveloper() {
      return hasRole('застройщик');
    }
    
    function hasRequiredRole() {
      return isAdmin() || isModerator() || isDeveloper();
    }

    // === Правила для фото профиля пользователей (из iOS) ===
    match /profile_images/{fileName} {
      allow read: if true; // Любой может читать фото профиля
      allow write: if request.auth != null 
                   && (fileName == request.auth.uid + '.jpg' ||
                       fileName == request.auth.uid + '.jpeg' ||
                       fileName == request.auth.uid + '.png' ||
                       fileName == request.auth.uid + '.gif' ||
                       fileName == request.auth.uid + '.webp')
                   && request.resource.size < 5 * 1024 * 1024 // Максимум 5MB
                   && request.resource.contentType.matches('image/.*'); // Только изображения
      // Для удаления request.resource недоступен, поэтому отдельное правило без проверок размера/типа
      allow delete: if request.auth != null 
                    && (fileName == request.auth.uid + '.jpg' ||
                        fileName == request.auth.uid + '.jpeg' ||
                        fileName == request.auth.uid + '.png' ||
                        fileName == request.auth.uid + '.gif' ||
                        fileName == request.auth.uid + '.webp');
    }

    // === Правила для фотографий комплексов (оба варианта путей) ===
    match /complexes/{fileName} {
      allow read: if true;
      allow write, delete: if hasRequiredRole();
    }
    
    match /complexes/images/{fileName} {
      allow read: if true;
      allow write, delete: if hasRequiredRole();
    }

    // === Правила для фотографий объектов ===
    match /properties/{fileName} {
      allow read: if true;
      allow write, delete: if hasRequiredRole();
    }
    
    match /properties/images/{fileName} {
      allow read: if true;
      allow write, delete: if hasRequiredRole();
    }

    // === Правила для изображений (из админки, увеличены лимиты) ===
    match /images/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.resource.size < 20 * 1024 * 1024 // 20MB (увеличено с 5MB)
        && request.resource.contentType.matches('image/.*');
    }

    // === Правила для документов PKKPR (из iOS) ===
    match /documents/pkkpr/{fileName} {
      allow read: if true; // Любой может читать документы
      allow write: if request.auth != null
                   && request.resource.size < 20 * 1024 * 1024 // Максимум 20MB
                   && (request.resource.contentType.matches('application/pdf') ||
                       request.resource.contentType.matches('image/.*')); // PDF или изображения
    }
    
    // === Правила для ROI документов (из iOS) ===
    match /documents/roi/{fileName} {
      allow read: if true; // Любой может читать документы
      allow write: if request.auth != null
                   && request.resource.size < 20 * 1024 * 1024 // Максимум 20MB
                   && (request.resource.contentType.matches('application/pdf') ||
                       request.resource.contentType.matches('image/.*')); // PDF или изображения
    }
    
    // === Правила для Layout документов (из iOS) ===
    match /documents/layout/{fileName} {
      allow read: if true; // Любой может читать документы
      allow write: if request.auth != null
                   && request.resource.size < 20 * 1024 * 1024 // Максимум 20MB
                   && (request.resource.contentType.matches('application/pdf') ||
                       request.resource.contentType.matches('image/.*')); // PDF или изображения
    }

    // === Правила для Due Diligence документов (из админки, увеличен лимит) ===
    match /documents/due-diligence/{fileName} {
      allow read: if true; // Публичное чтение
      allow write: if request.auth != null
                   && request.resource.size < 50 * 1024 * 1024 // Максимум 50MB
                   && (request.resource.contentType.matches('application/pdf') ||
                       request.resource.contentType.matches('image/.*'));
    }

    // === Правила для документов (из админки, увеличены лимиты) ===
    match /documents/{documentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.resource.size < 20 * 1024 * 1024; // 20MB (увеличено с 10MB)
    }

    // === Правила для временных файлов (из админки) ===
    match /temp/{tempId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // === Правила для всех остальных файлов ===
    match /{allPaths=**} {
      allow read: if true; // Публичное чтение (как в iOS)
      allow write: if request.auth != null
                   && request.resource.size < 20 * 1024 * 1024; // Максимум 20MB для любых файлов
    }
  }
}
